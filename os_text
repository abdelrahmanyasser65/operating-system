 OPEN
READ ONLY
 ===>open file:
 #include<unistd.h>
 #include<fcntl.h>
 #include<sys/types.h>
 #incldue<sys/stat.h>
 int main(){
    int n,fd;
    char buf [50];
     fd=open("test.txt",O_RDONLY);
     n=read(fd,buf,10);
     write(1,buf,n);
 }
 gcc o1.c
 ./a.out
 cat test.txt
 ________________
create and open file:
  #include<unistd.h>
 #include<fcntl.h>
 #include<sys/types.h>
 #incldue<sys/stat.h>
 int main(){
    int n,fd,fd1;
    char buf [50];
     fd=open("test.txt",O_RDONLY);
     n=read(fd,buf,10);
     fd1=open("target",O_CREAT|O_WRONLY,0642);
     write(fd1,buf,n);
 }
