 LSEEK:
  
  lseek 10 char
  nano seek.c
  in nano:
  #include<sys/types.h>
  #incldue<sys/stat.h>
  #incldue<fcntl.h>
  #incldue<unistd.h>
  int main(){
   int n,f, f1;
   char buff[10];
   f=open("Seeking",O_RDWR);
   read(f,buff,10);  //first 10 char
   write(1,buff,10);
   lseek(f,10,SEEK_CUR); //lseek 10 char,
   read(f,buff,10);  //read after 10 char
   write (1,buff,10);
  }
  ________________
  show 10 char after 10 char
  #include<sys/types.h>
  #incldue<sys/stat.h>
  #incldue<fcntl.h>
  #incldue<unistd.h>
  #include<stdio.h>
  int main(){
    int n,f,f1;
    char buff[10];
    f=open("seeking",O_RDWR);
    f1=lseek(f,10,SEEK_SET);
    printf("pointer is at %d positoin\n,f1);
    read(f,buff,10);
    write(1,buff,10);
  }
  ________________
  print last 11 char:::
#include<sys/types.h>
  #incldue<sys/stat.h>
  #incldue<fcntl.h>
  #incldue<unistd.h>
  #include<stdio.h>
  int main(){
    int n,f,f1;
    char buff[20];
    f=open("seeking",O_RDWR);
    f1=lseek(f,-11,SEEK_END);
    read(f,buff,10);
    write(1,buff,10);
  }
